terraform {
  required_version = ">= 1.5"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "= 6.15.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "= 6.15.0"
    }
  }
}

provider "aws" {
  region = var.region
  default_tags { tags = var.common_tags }
}
